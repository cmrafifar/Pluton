<site-layout>
  <@title>Planet ${input.name}</@title>
  <@content>
    <h1>${input.name}</h1>
    <table>
      <tbody>
        <tr>
          <th>Coords</th>
          <td.id>
            <a href=`../clusters/${input.star.cluster}.html`>${input.star.cluster}</a>:<a href=`../stars/${input.star.id}.html`>${input.star.index}</a>:${input.index}
          </td>
        </tr>
        <tr>
          <th>Parent</th>
          <td>
            <a href=`../stars/${input.star.id}.html`>${input.star.name}</a>
          </td>
        </tr>
      </tbody>
    </table>
    <h2>Fleets</h2>
    <table>
      <thead>
        <tr>
          <th.center>PD</th>
          <th.center>No.</th>
          <th>Name</th>
          <th.right>Size</th>
          <th.center>Mode</th>
        </tr>
      </thead>
      <tbody>
        <for|key, row| in=input.fleets>
          <tr>
            <td.center>${row.mobile ? "N" : "Y"}</td>
            <td.center>${row.index}</td>
            <td>
              <a href=`../fleets/${row.id}.html`>${row.name}</a>
            </td>
            <td.right>${row.size}</td>
            <td.center>${row.attacking ? "Attack" : "Defend"}</td>
          </tr>
        </for>
      </tbody>
    </table>
  </@content>
</site-layout>
