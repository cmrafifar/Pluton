{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    //"noUnusedParameters": true,
    //"noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "pretty": true,
    "sourceMap": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "tmp"
  ]
}